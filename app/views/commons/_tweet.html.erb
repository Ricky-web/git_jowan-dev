<% tweets.each do |tweet| %>
  <div class="container">
    <div class="currency-pair">
      <h3><%= tweet.currency_pair %></h3>
      <% unless tweet.currency_pair == "Others" %>
        <%= image_tag "#{tweet.currency_pair[0, 3]}.png", class: "currency" %>
        <%= image_tag "#{tweet.currency_pair[3, 6]}.png", class: "margin-currency" %>
      <% end %>
    </div>
    <div class="tweet-title">
      <h2>
        <span style="border-bottom: solid 1px gray;">
          <% if current_user.already_watched?(tweet) %>
            <%= link_to "#{tweet.title}", tweet_path(tweet.id), method: :get %>
          <% else %>
            <%= link_to "#{tweet.title}", tweet_views_path(tweet.id), method: :post %>
          <% end %>
        </span>
      </h2>
      <small>
        📰<time datetime="<%= tweet.updated_at %>">Updated at <%= tweet.updated_at %></time> by <%= link_to "#{tweet.user.nickname}", user_path(tweet.user.id), method: :get, style: "text-decoration: underline;" %>
      </small>
      <div class="rate-box">
        <ul>
          <% if current_user.already_liked?(tweet) %>
            <li><small><%= link_to '👍', "/tweets/#{tweet.id}/likes/#{tweet.likes.find_by(user_id: current_user.id).id}", method: :delete %>: <u><%= tweet.likes.count %> (You +1)</u></small></li>
          <% else %>
            <li><small><%= link_to '👍', tweet_likes_path(tweet.id), method: :post %>: <u><%= tweet.likes.count %></u></small></li>
          <% end %>
          <li><small><%= link_to '💬', tweet_path(tweet.id), method: :get %>: <u><%= tweet.comments.count %></u></small></li>
          <% if current_user.already_watched?(tweet) %>
            <li><small>🔎: <u><%= tweet.views.count %> (You +1)</u></small></li>
          <% else %>
            <li><small>🔎: <u><%= tweet.views.count %></u></small></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>