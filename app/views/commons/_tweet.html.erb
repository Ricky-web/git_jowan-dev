<article>
<% tweets.each do |tweet| %>
  <div class="container">
    <div class="currency-pair">
      <h3><%= tweet.currency_pair %></h3>
      <% unless tweet.currency_pair == "Others" %>
        <%= image_tag "#{tweet.currency_pair[0, 3]}.png", class: "currency" %>
        <%= image_tag "#{tweet.currency_pair[3, 6]}.png", class: "margin-currency" %>
      <% end %>
    </div>
    <div class="tweet-title">
      <h2>
        <span style="border-bottom: solid 1px gray;">
          <% if current_user.already_watched?(tweet) %>
            <%= link_to "#{tweet.title}", tweet_path(tweet.id), method: :get %>
          <% else %>
            <%= link_to "#{tweet.title}", tweet_views_path(tweet.id), method: :post %>
          <% end %>
        </span>
      </h2>
      <small>
        ğŸ“°<time datetime="<%= tweet.updated_at %>">Updated at <%= tweet.updated_at %></time> by <%= link_to "#{tweet.user.nickname}", user_path(tweet.user.id), method: :get, style: "border-bottom: solid 0.5px black;" %>
      </small>
      <div class="rate-box">
        <ul>
          <% if current_user.already_liked?(tweet) %>
            <li><small><%= link_to 'ğŸ‘', "/tweets/#{tweet.id}/likes/#{tweet.likes.find_by(user_id: current_user.id).id}", method: :delete %>: <span style="border-bottom: solid 0.5px black;"><%= tweet.likes.count %> (You +1)</span></small></li>
          <% else %>
            <li><small><%= link_to 'ğŸ‘', tweet_likes_path(tweet.id), method: :post %>: <span style="border-bottom: solid 0.5px black;"><%= tweet.likes.count %></span></small></li>
          <% end %>
          <li><small><%= link_to 'ğŸ’¬', tweet_path(tweet.id), method: :get %>: <span style="border-bottom: solid 0.5px;"><%= tweet.comments.count %></span></small></li>
          <% if current_user.already_watched?(tweet) %>
            <li><small>ğŸ‘: <span style="border-bottom: solid 0.5px black;"><%= tweet.views.count %> (You +1)</span></small></li>
          <% else %>
            <li><small>ğŸ‘: <span style="border-bottom: solid 0.5px black;"><%= tweet.views.count %></span></small></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="tweet-poster">
      <% if tweet.user.image.attached? %>
        <%= image_tag tweet.user.image, class: "poster-image" %><br>
      <% else %>
        <%= image_tag "default.png", class: "poster-image" %>
      <% end %>
      <small class="poster-name">Poster: <%= link_to "#{tweet.user.nickname}", user_path(tweet.user.id), method: :get, style: "border-bottom: solid 1px black;" %><span>â†—</span></small>
    </div>
  </div>
<% end %>
</article>